<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/floatingnews_playerview_background">

    <TextView
        android:id="@+id/float_tv_title"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <org.sufficientlysecure.htmltextview.HtmlTextView
        android:gravity="center"
        android:id="@+id/float_htv_content"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_marginBottom="5dp"
        android:textColor="#000000"
        />
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/jumptonews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/jump_to_news"
        android:textColor="#ff2626"/>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageButton
            android:contentDescription="@string/app_name"
            android:layout_margin="10dp"
            android:id="@+id/float_ib_previous"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@null"
            android:src="@mipmap/landscape_player_btn_pre_press"/>

        <ImageButton
            android:contentDescription="@string/app_name"
            android:layout_margin="10dp"
            android:id="@+id/float_ib_play"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@null"
            android:src="@mipmap/landscape_player_btn_play_press"/>

        <ImageButton
            android:contentDescription="@string/app_name"
            android:layout_margin="10dp"
            android:id="@+id/float_ib_next"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@null"
            android:src="@mipmap/landscape_player_btn_next_press"/>

    </LinearLayout>
</LinearLayout>